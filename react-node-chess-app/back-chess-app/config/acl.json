[
    {
        "group": "admin",
        "permissions": [
            {
                "resource": "*",
                "methods": "*",
                "action": "allow"
            }
        ]
    },
    {
        "group": "user",
        "permissions": [
            {
                "resource": "users/signin",
                "methods": [
                    "POST"
                ],
                "action": "allow"
            },
            {
                "resource": "users/signup",
                "methods": [
                    "POST"
                ],
                "action": "allow"
            },
            {
                "resource": "users/",
                "methods": [
                    "PUT"
                ],
                "action": "allow"
            },
            {
                "resource": "exercises/",
                "methods": [
                    "GET"
                ],
                "action": "allow"
            }
        ]
    }
]